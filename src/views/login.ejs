<div class="max-w-md mx-auto pt-12 w-full">
  <form
    action="/login"
    method="post"
    class="border border-slate-300 rounded-md w-full flex flex-col gap-6 px-8 pt-12 pb-8"
  >
    <h2 class="text-2xl font-black text-center tracking-tight">User Sign in</h2>
    <div class="flex flex-col gap-2">
      <div
        class="w-full flex items-center gap-3 border border-slate-200 px-4 py-3 rounded-md"
      >
        <i class="fa-solid fa-envelope"></i>
        <input
          type="text"
          placeholder="Email"
          name="email"
          class="w-full focus-within:outline-none"
        />
      </div>
      <div
        class="w-full flex items-center gap-3 border border-slate-200 px-4 py-3 rounded-md"
      >
        <i class="fas fa-lock"></i>
        <input
          type="password"
          placeholder="Password"
          name="password"
          class="w-full focus-within:outline-none"
        />
      </div>
      <a href="/forgot-password" class="text-sm text-right">Forgot Password?</a>
    </div>
    <button
      type="submit"
      class="bg-orange-500 py-3 text-white font-bold rounded-md hover:bg-orange-600 transition ease-in-out duration-100"
    >
      Login
    </button>
