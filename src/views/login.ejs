<%- include("partials/_heading.ejs") %>

<div class="container">
  <div class="forms-container">
    <div class="signin-signup">
      <form action="#" class="sign-in-form">
        <h2 class="title">User Sign in</h2>
        <div class="input-field">
          <i class="fas fa-user"></i>
          <input type="text" placeholder="Username" />
        </div>
        <div class="input-field">
          <i class="fas fa-lock"></i>
          <input type="password" placeholder="Password" />
        </div>
        <input type="submit" value="Login" class="btn solid" />
      </form>
      <form action="#" class="sign-up-form">
        <h2 class="title">Admin Sign up</h2>
        <div class="input-field">
          <i class="fas fa-user"></i>
          <input type="text" placeholder="Username" />
        </div>
        <div class="input-field">
          <i class="fas fa-envelope"></i>
          <input type="email" placeholder="Email" />
        </div>
        <div class="input-field">
          <i class="fas fa-lock"></i>
          <input type="password" placeholder="Password" />
        </div>
        <input type="submit" class="btn" value="Sign up" />
      </form>
    </div>
  </div>

  <div class="panels-container">
    <div class="panel left-panel">
      <div class="content">
        <h3>Login as a admin ?</h3>
        <p>
          Log in as an admin to post jobs, manage applications, and hire the
          best talent. Grow your team and business with a streamlined
          recruitment process.
        </p>

        <button class="btn transparent" id="sign-up-btn">Sign up</button>
      </div>
      <img src="img/log.svg" class="image" alt="" />
    </div>
    <div class="panel right-panel">
      <div class="content">
        <h3>Login as a user ?</h3>
        <p>
          Log in to find job opportunities tailored to your skills and
          interests. Easily search, apply, and track your applications, bringing
          you closer to landing your dream job.
        </p>
        <button class="btn transparent" id="sign-in-btn">Sign in</button>
      </div>
    </div>
  </div>
</div>

<%- include('partials/_footer.ejs') %>
